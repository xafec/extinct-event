---
import SectionContainer from "../components/SectionContainer.astro";
import Layout from "../layouts/Layout.astro";

export const prerender = true;
---

<Layout title="Page Not Found">
  <main class="px-4">
    <SectionContainer class="py-20 flex flex-col items-center">
      <h1 class="font-black text-4xl lg:text-5xl xl:text-6xl flex text-center">
        Page Not Found
      </h1>
      <p class="mt-20 text-xl sm:text-2xl flex text-center">
        The page you are looking for does not exist
      </p>
      <p class="mt-2 text-xl">
        Go back to <a href="/" class="underline hover:no-underline">home</a>
      </p>
    </SectionContainer>
  </main>
</Layout>
