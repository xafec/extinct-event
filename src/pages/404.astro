---
import SectionContainer from "../components/SectionContainer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="px-4">
    <SectionContainer class="py-20 flex flex-col items-center">
      <h1
        class="-translate-x-0.5 sm:-translate-x-1 font-black w-full text-4xl lg:text-5xl xl:text-6xl flex justify-center"
      >
        Page Not Found
      </h1>
      <p class="mt-20 text-xl">The page you are looking for does not exist</p>
      <p class="mt-2 text-xl">
        Go back to <a href="/" class="underline">home</a>
      </p>
    </SectionContainer>
  </main>
</Layout>
