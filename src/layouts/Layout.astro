---
import "@fontsource/twinkle-star";
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import background from "../images/background.webp";

const { title } = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <BaseHead title={title} />
  </head>
  <body
    class="relative bg-neutral-950 text-white selection:bg-purple-200/20 selection:text-gray-400 min-h-screen"
  >
    <div class="pointer-events-none absolute min-h-screen object-cover">
      <Image
        src={background}
        alt="background"
        class="fixed h-screen w-screen object-cover opacity-20 blur-[128px] brightness-90"
      />
    </div>

    <div class="relative z-10" id="home">
      <slot />

      <Footer />
    </div>
    <style is:global>
      html {
        font-family: "Montserrat", sans-serif;
      }
    </style>
  </body>
</html>
